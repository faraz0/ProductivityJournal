<%- include("partials/header") -%>

<h1>Edit</h1>
<form action="/edit" method="post">
  <label for="titleInput">Title</label>
  <div class="titleDiv">
    <input id="titleInput" type="text" name="editTitle" value="<%=arr.title%>" >
  </div>
  <input type="hidden" name="hidden_id" value="<%=arr._id%>">
  <label for="descpInput">Post</label>
  <div class="descpArea">
    <textarea name="textArea" rows="8" cols="80"><%=arr.desc%></textarea>
  </div>
  <button class="btn btn-primary" type="submit" name="button">Publish</button>

</form>
<%- include("partials/footer") -%>
